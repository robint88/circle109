<%- include("./partials/header") %>
<h1>Register</h1>
<div class="form-group row justify-content-center">
    <form action="/register" class="col-6" method="POST">
        <label for="username">username</label>
        <input type="text" id="username" class="form-control" name="username" placeholder="enter a username" required>
        
        <label for="email">email</label>
        <input type="text" id="email" class="form-control" name="email" placeholder="enter your email address" required>

        <label for="password">password</label>
        <input type="password" name="password" class="form-control" id="password" placeholder="enter a password" required>
        
        <label for="residentType">owner / renter</label>
        <select class="form-control" data-style="btn-info" id="residentType" name="residentType" required>
                <optgroup label="owner/renter">
                    <option name="optionRent" value="renter">renter</option>
                    <option name="optionOwn" value="owner">owner</option>
                </optgroup>
            </select>
        <br>
        <button type="submit" class="btn btn-outline-info">register</button>
    </form>
</div>
<p class="text-center">already registered? login <a href="/login">here</a></p>
<%- include("./partials/footer") %>